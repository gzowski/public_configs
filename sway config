include "$HOME/.cache/wal/colors-sway"

bar {
swaybar_command waybar
}

set {
	$gnome-schema org.gnome.desktop.interface
	$dmenu wofi --show drun
	$ws1 "1"
	$ws2 "2"
	$ws3 "3"
	$ws4 "4"
	$ws5 "5"
	$ws6 "6"
	$ws7 "7"
	$ws8 "8"
	$ws9 "9"
	$ws10 "10"
	$mod Mod4
	$modalt Mod1
}

exec_always {
	gsettings set $gnome-schema gtk-theme 'oomox-xresources-reverse'
	gsettings set $gnome-schema icon-theme 'Papirus-Dark'
	gsettings set $gnome-schema cursor-theme 'Adwaita'
	gsettings set $gnome-schema font-name 'Source Code Pro'
	swaymsg input type:keyboard xkb_options compose:ralt
	import-gsettings
	pgrep -x dunst > /dev/null || dunst &
}

exec {
	piactl connect
	numlockx &
	/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
	dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
	wal -R
}

input "type:keyboard" {
xkb_layout us
}

output 		DP-1 	pos 1920 0 	mode 1920x1080@74.973000Hz 	adaptive_sync on
output 		DP-2 	pos 0 0 	mode 1920x1200@59.950001Hz
output 		DP-2 	bg $HOME/Pictures/WP/arch.png fill
output 		DP-1 	bg $HOME/Pictures/WP/74669987_p1.png fill
focus_follows_mouse 	yes
floating_modifier 	$mod
focus_on_window_activation focus
font pango:Source Code Pro Regular 10
default_border 		pixel 2
gaps inner 10

for_window {
	[workspace=$ws1] 			layout tabbed
	[workspace=$ws6]			floating enable
	[window_role="About"] 			floating enable
	[title="Authy"] 			floating enable
	[title="discord"] 			move to workspace 	$ws2
	[title="irssi"] 			move to workspace	$ws2
	[class="Spotify"] 			move to workspace 	$ws3
	[title="About Tor - Tor Browser"] 	move to workspace 	$ws4
	[app_id="firefox"]			focus
	[app_id="org.remmina.Remmina"]		focus
	[app_id="Thunderbird"]			focus
	[class="Gimp-2.10"]			focus
	[class="Gimp-2.10"]			floating enable
}
	
assign {
	[app_id="org.remmina.Remmina"] 			$ws10
	[app_id="Tor Browser"]	 			$ws4
	[app_id="obs"] 					$ws5
	[app_id="Steam"] 				$ws6
	[app_id="Lutris"] 				$ws6
	[app_id="battle.net.exe"] 			$ws6
	[app_id="firefox"] 				$ws7
	[app_id="thunderbird"] 				$ws8
	[class="Microsoft Teams - Preview"] 		$ws1
	[class="outlook-nativefier-8c9fad"] 		$ws1
	[app_id="whatsapp-for-linux"] 			$ws2
	[class="Gimp-2.10"]				$ws9
}

bindsym {
	$mod+F5 		exec teams & ~/nativefier/Outlook-linux-x64/Outlook --no-sandbox
	$mod+F12 		exec ~/Scripts/wallpaper.sh
	--release Print 	exec grim -g "$(slurp)" - | wl-copy
	$mod+F2 		exec emacs
	$mod+b 			exec firefox
 	XF86AudioRaiseVolume 	exec pamixer -i 5
 	XF86AudioLowerVolume 	exec pamixer -d 5
 	XF86AudioMute 		exec pamixer -t
 	XF86Calculator 		exec spotify &
 	$mod+l 			exec swaylock -i "~/Pictures/WP/arch.png"
 	$mod+Return 		exec alacritty
 	$mod+q 			kill
 	--release $mod+Shift+q 	exec xkill
	$mod+d 			exec $dmenu
 	$mod+Left 		focus left
 	$mod+Down 		focus down
	$mod+Up 		focus up
 	$mod+Right 		focus right
 	$mod+Shift+Left 	move left
 	$mod+Shift+Down 	move down
 	$mod+Shift+Up 		move up
 	$mod+Shift+Right 	move right
	$mod+h 			split h
 	$mod+v 			split v
	$mod+f 			fullscreen toggle
 	$mod+w 			layout tabbed
 	$mod+e 			layout toggle split
 	$mod+space 		floating toggle
 	$mod+1 			workspace number $ws1
 	$mod+2 			workspace number $ws2
 	$mod+3 			workspace number $ws3
 	$mod+4 			workspace number $ws4
 	$mod+5 			workspace number $ws5
 	$mod+6 			workspace number $ws6 
 	$mod+7 			workspace number $ws7
 	$mod+8 			workspace number $ws8
 	$mod+9 			workspace number $ws9
 	$mod+0 			workspace number $ws10
 	$mod+Shift+1 		move container to workspace number $ws1
 	$mod+Shift+2 		move container to workspace number $ws2
 	$mod+Shift+3 		move container to workspace number $ws3
 	$mod+Shift+4 		move container to workspace number $ws4
 	$mod+Shift+5 		move container to workspace number $ws5
 	$mod+Shift+6		move container to workspace number $ws6
 	$mod+Shift+7		move container to workspace number $ws7
 	$mod+Shift+8		move container to workspace number $ws8
 	$mod+Shift+9		move container to workspace number $ws9
 	$mod+Shift+0		move container to workspace number $ws10
 	$mod+Shift+r 		reload
 	$mod+Shift+e 		exec swaynag -t warning -m 'Shutdown Menu' -b 'TTY' 'swaymsg exit' -b 'Shutdown' 'systemctl poweroff' -b 'Reboot' 'systemctl reboot'
}

