[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
pol-interval = 5
time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = Full

[module/vpnstatuses]
type = custom/script
exec = vpnstatus
format = <label>
format-prefix = " "
label-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.icons}
click-left = "piactl connect"
click-right = "piactl disconnect"
interval = 5
format-padding = 1
format-background = ${colors.backpad}

[module/spotify-music]
type = custom/script
exec = spotify-music
click-left = playerctl --player=spotify play-pause
click-middle = playerctl --player=spotify previous
click-right = playerctl --player=spotify next
format = <label>
label = "%output:0:45:...%"
format-prefix = " "
label-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.spotify}
interval = 1
format-padding = 1
format-background = ${colors.background}

[module/xwindow]
